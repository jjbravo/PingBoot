<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.example.carleds"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CarLeds" >

    <Button
        android:id="@+id/btn_right"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/btn_down"
        android:layout_alignParentRight="true"
        android:textSize="15dp"
        android:text="Derecha" />

    <Button
        android:id="@+id/btn_stop"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/btn_down"
        android:layout_alignLeft="@+id/btn_up"
        android:layout_alignRight="@+id/btn_up"
        android:textSize="15dp"
        android:text="Stop" />

    <Button
        android:id="@+id/btn_left"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/btn_down"
        android:layout_toLeftOf="@+id/btn_stop"
        android:textSize="15dp"
        android:text="Izquierda" />

    <Button
        android:id="@+id/btn_down"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/btn_connect"
        android:layout_marginBottom="30dp"
        android:layout_toLeftOf="@+id/btn_right"
        android:textSize="15dp"
        android:text="AtrÃ¡s" />

    <Button
        android:id="@+id/btn_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/btn_left"
        android:textSize="15dp"
        android:text="Conectar" />

    <Button
        android:id="@+id/btn_up"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_above="@+id/btn_stop"
        android:layout_alignLeft="@+id/btn_down"
        android:textSize="15dp"
        android:text="Adelante" />

</RelativeLayout>